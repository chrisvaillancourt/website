---
import { experiences } from './experience';
import ResumeHeader from './ResumeHeader.astro';
import ResumeExperience from './ResumeExperience.astro';
import ResumeSkills from './ResumeSkills.astro';
import ResumeEducation from './ResumeEducation.astro';
---

<article>
  <ResumeHeader class="header" />
  <ResumeExperience class="experience" experiences={experiences} />
  <ResumeSkills class="skills" />
  <ResumeEducation class="education" />
</article>

<style>
  .header {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
  }
  .experience {
    grid-column: 1 / 2;
  }
  .skills {
    grid-column: 2 / 3;
  }
  .education {
    grid-column: 2 / 3;
  }
</style>
