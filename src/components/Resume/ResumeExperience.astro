---
import ResumeExperienceItem from '@/components/Resume/ResumeExperienceItem.astro';
import type { Experience } from './experience';

interface Props {
  experiences: Set<Experience> | Experience[];
  class?: string;
}
const { experiences, class: className }: Props = Astro.props;
---

<article class={`${className} article`}>
  <header>
    <h2>Experience</h2>
  </header>

  {
    [...experiences].map((experience) => (
      <>
        <ResumeExperienceItem {...experience} />
      </>
    ))
  }
</article>

<style>
  .article {
    padding-block-start: var(--size-8);
    display: flex;
    flex-direction: column;
  }
  h2 {
    font-size: var(--font-size-4);
  }
</style>
