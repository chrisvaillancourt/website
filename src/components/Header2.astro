---
import Link from '@/components/Link';
import { NAV_LINKS } from '@/lib/constants';

import ThemeToggle2 from '@/components/ThemeToggle2';
const url = new URL(Astro.request.url);
---

<header
	class="mb-28 grid grid-cols-2 grid-rows-2 justify-center gap-4 md:grid-rows-1"
>
	<Link
		href="/"
		no-underline
		class="relative flex items-center"
		aria-current={url.pathname === '/' ? 'page' : false}
	>
		<div class="pe-3 text-3xl">ðŸŒµ</div>
		<span class="header-title text-2xl font-bold">
			<slot name="title" />
		</span>
	</Link>
	<!-- ms-10 -->
	<nav
		class="col-start-1 row-start-2 flex items-center md:col-start-2 md:row-start-1"
	>
		<ul class="flex divide-x divide-dashed divide-accent text-accent">
			{
				NAV_LINKS.map((link) => (
					<li>
						<Link
							href={link.path}
							no-underline
							class="px-4 py-4 sm:py-0 sm:hover:underline"
							aria-current={url.pathname === link.path ? 'page' : false}
						>
							{link.title}
						</Link>
					</li>
				))
			}
		</ul>
	</nav>

	<ThemeToggle2 class="justify-self-end md:col-start-3" />
</header>
