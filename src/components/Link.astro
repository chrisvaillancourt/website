---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'a'> {
	primary?: boolean;
}

const {
	href = '#',
	target = '_blank',
	rel = 'noreferrer',
	class: className,
	primary,
	...attrs
} = Astro.props;

const classes = [
	'link',
	{ 'link-primary': primary, [className ?? '']: className },
];
---

<span class="not-prose">
	<a href={href} target={target} rel={rel} class:list={classes} {...attrs}>
		<slot />
	</a>
</span>
