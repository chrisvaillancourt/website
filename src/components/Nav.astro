---
import NavHamburger from '@/components/NavHamburger.astro';
import Link from '@/components/Link.astro';
interface Props {
  links: {
    href: string;
    text: string;
  }[];
  class?: string;
}

const { links, class: className = '' } = Astro.props;
---

<nav class={className}>
  <ul>
    {
      links?.map(({ href, text }) => (
        <li>
          <Link href={href} target="_self">
            {text}
          </Link>
        </li>
      ))
    }
  </ul>
  <NavHamburger class="nav-hamburger" links={links} />
</nav>
<style>
  nav {
    display: flex;
    justify-content: flex-end;
    gap: var(--size-2);
  }
  ul {
    display: flex;
  }
  li {
    padding-inline-start: var(--size-2);
  }
  nav > ul {
    margin-bottom: 0;
  }
  .nav-hamburger {
    display: none;
  }
  @media (--sm-n-below) {
    .nav-hamburger {
      display: initial;
    }
    ul {
      display: none;
    }
  }
</style>
