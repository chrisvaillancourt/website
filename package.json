{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm lint && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"format": "prettier --write --plugin-search-dir=. .",
		"lint": "eslint src/**/*.{ts,astro} --ignore-path .gitignore",
		"lint:fix": "pnpm lint --fix"
	},
	"devDependencies": {
		"@astrojs/image": "^0.17.2",
		"@astrojs/mdx": "^0.19.7",
		"@astrojs/sitemap": "^1.3.3",
		"@astrojs/tailwind": "^4.0.0",
		"@resvg/resvg-js": "^2.4.1",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^18.16.19",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"autoprefixer": "^10.4.14",
		"daisyui": "^3.2.1",
		"eslint": "^8.44.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-astro": "^0.27.2",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"postcss": "^8.4.25",
		"postcss-html": "^1.5.0",
		"prettier": "2.8.8",
		"prettier-plugin-astro": "^0.10.0",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.6",
		"wrangler": "^3.1.2"
	},
	"dependencies": {
		"@astrojs/prefetch": "^0.2.3",
		"@astrojs/rss": "^2.4.3",
		"@mdi/js": "^7.2.96",
		"astro": "^2.8.0",
		"satori": "^0.10.1",
		"satori-html": "^0.3.2",
		"sharp": "^0.32.1"
	}
}
