{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm format && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview --host",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"test:e2e": "playwright test",
		"format": "prettier . --check --ignore-path=.prettierignore --ignore-path=.gitignore",
		"format:fix": "pnpm format --write"
	},
	"devDependencies": {
		"@astrojs/check": "^0.5.6",
		"@astrojs/mdx": "^2.1.1",
		"@astrojs/sitemap": "^3.1.1",
		"@astrojs/tailwind": "^5.1.0",
		"@playwright/test": "^1.39.0",
		"@resvg/resvg-js": "^2.5.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.10",
		"@types/node": "^20.8.7",
		"autoprefixer": "^10.4.16",
		"daisyui": "^3.9.3",
		"postcss": "^8.4.31",
		"postcss-html": "^1.5.0",
		"prettier": "3.0.3",
		"prettier-plugin-astro": "^0.13.0",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.2.2",
		"wrangler": "^3.14.0"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.5",
		"@mdi/js": "^7.3.67",
		"astro": "^4.4.12",
		"dotenv": "^16.3.1",
		"dotenv-expand": "^10.0.0",
		"remark-unwrap-images": "^4.0.0",
		"satori": "^0.10.9",
		"satori-html": "^0.3.2",
		"zod": "^3.22.4"
	}
}
