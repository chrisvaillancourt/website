{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm format && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview --host",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"test": "vitest",
		"test:e2e": "playwright test",
		"format": "prettier . --check --ignore-path=.prettierignore --ignore-path=.gitignore --plugin=prettier-plugin-astro",
		"format:fix": "pnpm format --write"
	},
	"devDependencies": {
		"@astrojs/check": "^0.5.10",
		"@astrojs/mdx": "^2.2.2",
		"@astrojs/sitemap": "^3.1.2",
		"@astrojs/tailwind": "^5.1.0",
		"@playwright/test": "^1.42.1",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.12",
		"@types/node": "^20.12.2",
		"autoprefixer": "^10.4.19",
		"daisyui": "^3.9.4",
		"postcss": "^8.4.38",
		"postcss-html": "^1.6.0",
		"prettier": "3.2.5",
		"prettier-plugin-astro": "^0.13.0",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.4.3",
		"vitest": "^1.4.0",
		"wrangler": "^3.41.0"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.5",
		"@mdi/js": "^7.4.47",
		"astro": "^4.5.12",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^10.0.0",
		"remark-unwrap-images": "^4.0.0",
		"satori": "^0.10.13",
		"satori-html": "^0.3.2",
		"zod": "^3.22.4"
	}
}
