{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm lint && pnpm format && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"test:e2e": "playwright test",
		"format": "prettier . --check --ignore-path=.prettierignore --ignore-path=.gitignore",
		"format:fix": "pnpm format --write",
		"lint": "eslint src/**/*.{ts,astro} --ignore-path .gitignore",
		"lint:fix": "pnpm lint --fix"
	},
	"devDependencies": {
		"@astrojs/mdx": "^0.19.7",
		"@astrojs/sitemap": "^2.0.1",
		"@astrojs/tailwind": "^4.0.0",
		"@playwright/test": "^1.36.2",
		"@resvg/resvg-js": "^2.4.1",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^18.17.1",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"autoprefixer": "^10.4.14",
		"daisyui": "^3.5.0",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-astro": "^0.27.2",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"postcss": "^8.4.27",
		"postcss-html": "^1.5.0",
		"prettier": "3.0.0",
		"prettier-plugin-astro": "^0.11.0",
		"prettier-plugin-tailwindcss": "^0.4.1",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.1.6",
		"wrangler": "^3.3.0"
	},
	"dependencies": {
		"@astrojs/prefetch": "^0.3.0",
		"@astrojs/rss": "^2.4.3",
		"@mdi/js": "^7.2.96",
		"astro": "^2.9.3",
		"dotenv": "^16.3.1",
		"dotenv-expand": "^10.0.0",
		"remark-unwrap-images": "^3.0.1",
		"satori": "^0.10.1",
		"satori-html": "^0.3.2",
		"zod": "^3.21.4"
	}
}
