{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm format && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview --host",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"test": "vitest",
		"test:e2e": "playwright test",
		"format": "prettier . --check --ignore-path=.prettierignore --ignore-path=.gitignore --plugin=prettier-plugin-astro",
		"format:fix": "pnpm format --write"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.3",
		"@astrojs/mdx": "^3.1.5",
		"@astrojs/sitemap": "^3.1.6",
		"@astrojs/tailwind": "^5.1.0",
		"@playwright/test": "^1.47.0",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.15",
		"@types/node": "^20.16.5",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.10",
		"postcss": "^8.4.45",
		"postcss-html": "^1.7.0",
		"prettier": "3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"tailwindcss": "^3.4.11",
		"typescript": "^5.6.2",
		"vitest": "^2.0.5",
		"wrangler": "^3.76.0"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.7",
		"@mdi/js": "^7.4.47",
		"astro": "^4.15.4",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"remark-unwrap-images": "^4.0.0",
		"satori": "^0.10.14",
		"satori-html": "^0.3.2",
		"zod": "^3.23.8"
	}
}
