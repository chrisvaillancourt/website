{
	"name": "chris-vaillancourt-website",
	"version": "0.0.1",
	"description": "Chris Vaillancourt's personal website.",
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"dev": "astro check --watch & astro dev --host",
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && pnpm format && astro build",
		"wrangler": "wrangler",
		"deploy": "wrangler pages deploy dist",
		"preview": "astro preview --host",
		"preview:wrangler": "wrangler pages dev ./dist",
		"astro": "astro",
		"tsc": "tsc",
		"test": "vitest",
		"test:e2e": "playwright test",
		"format": "prettier . --check --ignore-path=.prettierignore --ignore-path=.gitignore --plugin=prettier-plugin-astro",
		"format:fix": "pnpm format --write"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.0.8",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^6.0.0",
		"@playwright/test": "^1.50.1",
		"@resvg/resvg-js": "^2.6.2",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^20.17.17",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.23",
		"postcss": "^8.5.2",
		"postcss-html": "^1.8.0",
		"prettier": "3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9",
		"wrangler": "^3.108.1"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.11",
		"@mdi/js": "^7.4.47",
		"astro": "^5.2.6",
		"dotenv": "^16.4.7",
		"dotenv-expand": "^11.0.7",
		"remark-unwrap-images": "^4.0.1",
		"satori": "^0.11.3",
		"satori-html": "^0.3.2",
		"zod": "^3.24.2"
	}
}
